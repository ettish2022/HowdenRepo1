<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Cannot_Change_Industry</fullName>
    <active>true</active>
    <errorConditionFormula>AND (ISCHANGED(Industry)) &amp;&amp; Not( $Permission.Account_Industry )</errorConditionFormula>
    <errorDisplayField>Industry</errorDisplayField>
    <errorMessage>אין אפשרות לשנות תעשיית לקוח, אנא פנה לבקרה פיננסית</errorMessage>
</ValidationRule>
